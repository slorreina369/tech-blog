<div class="comments">
  {{#each this}}
  <section class="comment" data-id="{{id}}">
    <div class="meta">
      {{user.username}} on {{format_date created_at}}
    </div>
    <div class="text">
      {{comment_text}}
    </div>
    <div>
      <button type="submit" class="edit-button">Edit</button>
      <button type="button" class="delete-comment-btn">Delete</button>
    </div>
    {{>edit-comment}}
  </section>

  {{/each}}
</div>

<script src="/javascript/edit-comment.js"></script>
<script src="/javascript/delete-comment.js"></script>
<script src="/javascript/delete-post.js"></script>
<script src="/javascript/comment.js"></script>
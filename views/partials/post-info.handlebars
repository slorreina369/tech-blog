<article onclick='location.href="/post/{{id}}"' class="post">
    <div class="title">
        {{title}}
    </div>
    <div class="meta">
        by {{user.username}} on
        {{format_date created_at}}
        |
        <a href="/post/{{id}}">{{comments.length}}{{format_plural "comment" comments.length}}</a>
    </div>
</article>